{
    "flarum-mentions": {
        "forum": {
            "composer": {
                "mention_tooltip": "提及用户或楼层",
                "reply_to_post_text": "回复 #{number}"
            },
            "notifications": {
                "others_text": "=> core.ref.some_others",
                "post_mentioned_text": "{username} 回复了你的帖子",
                "user_mentioned_text": "{username} 提到了你"
            },
            "post": {
                "mentioned_by_self_text": "{users} 回复了此帖",
                "mentioned_by_text": "{users} 回复了此帖",
                "others_text": "=> core.ref.some_others",
                "quote_button": "引用",
                "reply_link": "=> core.ref.reply",
                "you_text": "=> core.ref.you"
            },
            "settings": {
                "notify_post_mentioned_label": "有人回复了我",
                "notify_user_mentioned_label": "有人提到了我"
            },
            "user": {
                "mentions_link": "被提及"
            }
        },
        "email": {
            "post_mentioned": {
                "subject": "{replier_display_name} 回复您【{title}】",
                "body": "{recipient_display_name}，您好！\n\n{replier_display_name} 回复了您在《{title}》(#{post_number}) 的发言：\n\n{url}\n\n---\n\n{content}\n"
            },
            "user_mentioned": {
                "subject": "{mentioner_display_name} 提及您【{title}】",
                "body": "{recipient_display_name}，您好！\n\n{mentioner_display_name} 在《{title}》提及了您：\n\n{url}\n\n---\n\n{content}\n"
            }
        }
    }
}
